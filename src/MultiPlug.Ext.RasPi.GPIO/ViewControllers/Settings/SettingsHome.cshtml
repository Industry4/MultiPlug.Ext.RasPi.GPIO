@model MultiPlug.Ext.RasPi.GPIO.Models.Apps.Settings.HomeModel

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                    <a style="line-height: 52px;" href="#"><img alt="Raspberry Pi Logo" src="assets/raspi-gpio/images/raspberry-pi.png"></a>
                </div>
                <div class="span3">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Raspbery Pi GPIO</p>
                </div>
                <div class="span5" style="text-align: right;">
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="box">

                <div class="row-fluid">
                    <div class="span2">
                        <b>Bcm Pin Number</b>
                    </div>

                    <div class="span2">
                        <b>Subscriptions</b>
                    </div>

                    <div class="span1">
                        <b>Output</b>
                    </div>

                    <div class="span1">
                        <b>Pull</b>
                    </div>

                    <div class="span1">
                        <b>Event</b>
                    </div>

                    <div class="span3">
                        <b>ID</b>
                    </div>

                    <div class="span2">
                        <b>Description</b>
                    </div>

                </div>

                @foreach (var Output in @Model.Outputs)
                {
                    <input type="hidden" name="BcmPinNumber" value="@Output.BcmPinNumber">
                    <div class="row-fluid">
                        <div class="span2">
                            @Output.BcmPinNumber
                        </div>

                        <div class="span2">
                            <a class="btn btn-black" href="extensions/raspi-gpio/subscriptions/?id=@Output.BcmPinNumber">@Output.SubscriptionsCount</a>
                        </div>

                        <div class="span1">
                            <input class="PinIsOutput" id='@Output.BcmPinNumber-output' @Output.IsOutput name="IsOutput" value="true" type="checkbox">
                            <input id='@Output.BcmPinNumber-output-false' @Output.IsInput name='IsOutput' value='false' type='hidden'>
                        </div>

                        <div class="span1">
                            <select name='PullMode' class="input-block-level">
                                <option value="0" @Output.PullModeOff>Off</option>
                                <option value="1" @Output.PullModeDown>Down</option>
                                <option value="2" @Output.PullModeUp>Up</option>
                            </select>
                        </div>

                        <div class="span1">
                            <a class="btn btn-black" href="extensions/raspi-gpio/event/?id=@Output.BcmPinNumber"><i class="icon-pencil"></i></a>
                        </div>

                        <div class="span3">
                            <input name="" disabled class="input-block-level" type="text" value="@Output.EventId">
                        </div>

                        <div class="span2">
                            <input name="" disabled class="input-block-level" type="text" value="@Output.EventDescription">
                        </div>

                    </div>
                }
            </div>
        </div>
    </section>
</form>

<script>
    $(".PinIsOutput").change(function () {
        var hiddenfalse = $("#" + $(this).attr('id') + "-false");
        hiddenfalse.prop("disabled", (this.checked) ? true : false);
    });
</script>
