@model MultiPlug.Base.Http.EdgeApp

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                    <a style="line-height: 52px;" href="#"><img alt="Raspberry Pi Logo" src="@Raw(Model.Context.Paths.Assets)images/raspberry-pi.png"></a>
                </div>
                <div class="span4">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">GPIO Event</p>
                </div>
                <div class="span4" style="text-align: right;">
                    <a class="btn btn-black" style="height:44px; width:35px" href="@Raw(Model.Context.Paths.Home)setup/"><i class="icon-arrow-left icon-large"></i><p>Back</p></a>
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <h3 class="box-header">
                Event Properties
            </h3>
            <div class="box non-collapsible">
                <div class="row-fluid">
                    <div class="span4">
                        <div class="row-fluid"><div class="span12">Bcm Pin Number</div></div>
                        <div class="row-fluid"><div class="span12">
                            <input type="hidden" name="BcmPinNumber" value="@Model.Extension.Model.BcmPinNumber">
                            <p>@Model.Extension.Model.BcmPinNumber</p>
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="row-fluid"><div class="span12">Event ID</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="span12"><input name="EventId" class="input-block-level" type="text" value="@Model.Extension.Model.EventId"></div>
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="row-fluid"><div class="span12">Event Description</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="span12"><input name="EventDescription" class="input-block-level" type="text" value="@Model.Extension.Model.EventDescription"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <h3 class="box-header">
                Event Data
            </h3>
            <div class="box non-collapsible">
                <div class="row-fluid">
                    <div class="span4">
                        <div class="row-fluid"><div class="span12">Subject</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="span12"><input name="Subject" class="input-block-level" type="text" value="@Model.Extension.Model.Subject"></div>
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="row-fluid"><div class="span12">High</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="span12"><input name="High" class="input-block-level" type="text" value="@Model.Extension.Model.High"></div>
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="row-fluid"><div class="span12">Low</div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="span12"><input name="Low" class="input-block-level" type="text" value="@Model.Extension.Model.Low"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</form>
